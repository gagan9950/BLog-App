extends layout

block content
    h1= article.title
    h3 Written By #{author}
    h5
      p= article.body
    hr
    if user
      if user.id == article.author
        a.btn.btn-default(href='/articles/edit/'+article._id) Edit
        a.btn.btn-danger.delete-article(href='/articles/delete/'+article._id) Delete
